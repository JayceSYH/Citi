<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="54dp" android:paddingTop="6dp" android:paddingLeft="8dp"
                android:paddingRight="8dp" android:paddingBottom="6dp" android:touchscreenBlocksFocus="false"
                android:minHeight="68dp"
>

	<TextView
			android:layout_width="230dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="这是一个投资产品名字"
			android:id="@+id/txtPdtName" android:textStyle="bold"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:textSize="16sp"
			android:textColor="@color/secondary_text_default_material_light"
			android:height="25dp"
			android:layout_above="@+id/textView" android:gravity="center_vertical"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="+25.0%"
			android:id="@+id/txtIncRate"
			android:textSize="12sp"
			android:textColor="@color/increasingRed"
			android:gravity="center"
			android:layout_marginLeft="22dp"
			android:layout_marginStart="22dp"
			android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/txtCurrPrice"
			android:layout_toEndOf="@+id/txtCurrPrice" android:layout_alignTop="@+id/textView3"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="买入"
	          android:id="@+id/textView" android:textSize="12sp"
	          android:textIsSelectable="false"
	          android:background="@drawable/property_background" android:padding="1dp" android:textColor="#ffffff"
	          android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
	          android:layout_alignParentStart="true"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥4.0"
	          android:id="@+id/txtBuyPrice" android:textSize="12sp"
	          android:textIsSelectable="false"
	          android:paddingLeft="5dp" android:gravity="center"
	          android:layout_alignTop="@+id/textView4" android:layout_toRightOf="@+id/textView4"
	          android:layout_toEndOf="@+id/textView4" android:layout_alignParentBottom="true"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="买价"
	          android:id="@+id/textView4" android:textSize="12sp"
	          android:layout_marginLeft="22dp"
	          android:layout_marginStart="22dp"
	          android:layout_alignTop="@+id/txtBuyTime" android:layout_toRightOf="@+id/txtBuyTime"
	          android:layout_toEndOf="@+id/txtBuyTime" android:textIsSelectable="false"
	          android:background="@drawable/property_background" android:padding="1dp" android:textColor="#ffffff"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2015-01-01"
	          android:id="@+id/txtBuyTime" android:textSize="12sp"
	          android:layout_alignTop="@+id/textView" android:layout_toRightOf="@+id/textView"
	          android:layout_toEndOf="@+id/textView" android:textIsSelectable="false" android:paddingLeft="5dp"
	          android:gravity="center" android:layout_alignBottom="@+id/textView"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="本息"
	          android:id="@+id/textView3" android:textSize="12sp"
	          android:textIsSelectable="false"
	          android:background="@drawable/property_background"
	          android:padding="1dp" android:textColor="#ffffff"
	          android:layout_alignBottom="@+id/txtCurrPrice" android:layout_toRightOf="@+id/txtBuyPrice"
	          android:layout_toEndOf="@+id/txtBuyPrice" android:layout_marginLeft="22dp"
	          android:layout_marginStart="22dp"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥4.0"
	          android:id="@+id/txtCurrPrice" android:textSize="12sp" android:textIsSelectable="false"
	          android:paddingLeft="5dp"
	          android:gravity="center"
	          android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/textView3"
	          android:layout_toEndOf="@+id/textView3"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="卖出"
			android:id="@+id/btSell" android:layout_alignParentTop="true" android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" android:layout_alignParentBottom="true"
			android:gravity="center" android:textColor="@color/lightBlue"/>
</RelativeLayout>