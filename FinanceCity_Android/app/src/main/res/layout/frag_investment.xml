<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<lecho.lib.hellocharts.view.PieChartView
			android:layout_width="match_parent"
			android:layout_height="200dp" android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/pieChart">
	</lecho.lib.hellocharts.view.PieChartView>
	<ListView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listInvstProducts" android:layout_below="@+id/pieChart" android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>
</RelativeLayout>