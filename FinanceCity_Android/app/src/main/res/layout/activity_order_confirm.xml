<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		tools:context="nju.financecity_android.controller.activity.OrderConfirmActivity">

	<TextView android:layout_width="25dp" android:layout_height="25dp" android:text="1"
	          android:id="@+id/textView14"
	          android:background="@drawable/selected_lable"
	          android:layout_marginTop="22dp"
	          android:textSize="18sp"
	          android:textColor="@color/white" android:gravity="center"
	          android:layout_alignLeft="@+id/btCancel" android:layout_alignStart="@+id/btCancel"/>
	<TextView android:layout_width="wrap_content" android:layout_height="25dp" android:text="确认订单信息"
	          android:id="@+id/textView13"
	          android:textSize="18sp"
	          android:textColor="@color/validBlue" android:gravity="center"
	          android:layout_toRightOf="@+id/textView14" android:layout_toEndOf="@+id/textView14"
	          android:layout_above="@+id/textView17" android:layout_alignTop="@+id/textView14"/>
	<TextView android:layout_width="25dp" android:layout_height="25dp" android:text="2"
	          android:id="@+id/textView15"
	          android:textSize="18sp"
	          android:gravity="center"
	          android:layout_alignTop="@+id/textView23" android:layout_alignLeft="@+id/textView23"
	          android:layout_alignStart="@+id/textView23"/>
	<TextView android:layout_width="wrap_content" android:layout_height="25dp" android:text="提交订单"
	          android:id="@+id/textView16"
	          android:textSize="18sp"
	          android:gravity="center"
	          android:layout_toRightOf="@+id/textView15"
	          android:layout_toEndOf="@+id/textView15" android:layout_alignTop="@+id/textView15"
	          android:layout_alignBottom="@+id/textView15"/>
	<TextView
			android:layout_width="10dp"
			android:layout_height="25dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView17" android:layout_below="@+id/textView14" android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" android:layout_marginTop="21dp"
			android:background="@color/validBlue" android:textColor="@color/validBlue"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="商品列表"
			android:id="@+id/textView18"
			android:gravity="center" android:textSize="20sp"
			android:textColor="@color/validBlue" android:layout_alignTop="@+id/textView17"
			android:layout_toRightOf="@+id/textView17" android:layout_toEndOf="@+id/textView17"
			android:paddingLeft="12dp" android:layout_above="@+id/listGoods"/>
	<ListView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listGoods" android:layout_below="@+id/textView17" android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" android:layout_marginTop="8dp"
			android:layout_above="@+id/textView19" android:layout_marginBottom="12dp"
			android:choiceMode="singleChoice"/>
	<TextView android:layout_width="10dp" android:layout_height="25dp"
	          android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView19"
	          android:background="@color/validBlue" android:textColor="@color/validBlue"
	          android:layout_above="@+id/btCancel" android:layout_alignParentLeft="true"
	          android:layout_alignParentStart="true" android:layout_marginBottom="20dp"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="合计"
	          android:id="@+id/textView20" android:gravity="center" android:textSize="20sp"
	          android:textColor="@color/validBlue"
	          android:paddingLeft="12dp"
	          android:layout_alignBottom="@+id/textView19" android:layout_toRightOf="@+id/textView19"
	          android:layout_toEndOf="@+id/textView19" android:layout_alignTop="@+id/textView19"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12000"
	          android:id="@+id/txtSummary" android:gravity="center" android:textSize="20sp"
	          android:textColor="@color/increasingRed"
	          android:layout_alignTop="@+id/textView20" android:layout_alignParentRight="true"
	          android:layout_alignParentEnd="true" android:layout_alignBottom="@+id/textView20"
	          android:paddingRight="8dp"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥"
	          android:id="@+id/textView22" android:gravity="center" android:textSize="20sp"
	          android:textColor="@color/increasingRed"
	          android:layout_alignTop="@+id/txtSummary" android:layout_toLeftOf="@+id/txtSummary"
	          android:layout_toStartOf="@+id/txtSummary" android:layout_alignBottom="@+id/txtSummary"/>
	<Button
			android:layout_width="150dp"
			android:layout_height="40dp"
			android:text="提交订单"
			android:id="@+id/btSubmit"
			android:background="@color/validBlue"
			android:textColor="@color/white" android:textSize="18sp"
			android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/textView15"
			android:layout_toEndOf="@+id/textView15" android:layout_marginBottom="16dp"/>
	<Button
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text="取消"
			android:id="@+id/btCancel" android:layout_alignTop="@+id/btSubmit" android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" android:layout_alignBottom="@+id/btSubmit"
			android:background="@color/lightGrey" android:textSize="18sp"
			android:layout_marginLeft="20dp"
	/>
	<TextView
			android:layout_width="1dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView23" android:layout_alignTop="@+id/textView13"
			android:layout_centerHorizontal="true" android:background="@color/lightGrey"/>
</RelativeLayout>
