<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/textView25"
        android:layout_toStartOf="@+id/textView25"
        android:background="@drawable/unselected_label"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selected_label"
        android:gravity="center"
        android:text="2"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/textView25"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/textView25"
        android:layout_toRightOf="@+id/textView25"
        android:background="@drawable/unselected_label"
        android:gravity="center"
        android:text="3"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:background="@color/validBlue"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/validBlue" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView27"
        android:layout_toEndOf="@+id/textView27"
        android:layout_toRightOf="@+id/textView27"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="基本投资信息"
        android:textColor="@color/validBlue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView27"
        android:layout_toRightOf="@+id/textView27"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="预期赎回金额："
        android:textColor="@color/WordBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView29"
        android:layout_alignTop="@+id/textView29"
        android:layout_toEndOf="@+id/textView29"

        android:layout_toRightOf="@+id/textView29"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="(选择大额资金中途赎回)"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_below="@+id/textView29"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="￥"
        android:textColor="@color/WordBlack"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtInvestmentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView29"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/textView30"
        android:ems="10"
        android:inputType="number"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView30"
        android:layout_alignStart="@+id/textView30"
        android:layout_below="@+id/txtInvestmentAmount"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="购买保险金额："
        android:textColor="@color/WordBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView31"
        android:layout_alignTop="@+id/textView31"
        android:layout_toEndOf="@+id/textView31"
        android:layout_toRightOf="@+id/textView31"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="(选择保险)"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtExpiration"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/textView33"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="￥"
        android:textColor="@color/WordBlack"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtExpiration"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtInvestmentAmount"
        android:layout_alignStart="@+id/txtInvestmentAmount"
        android:layout_below="@+id/textView31"
        android:ems="10"
        android:inputType="date"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/txtExpiration"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:text="风险承受能力:"
        android:textColor="@color/WordBlack"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/sB1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignRight="@+id/textView36"
        android:layout_below="@+id/textView36"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seekBatText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="最低承受损失:"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView36"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sB2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sB1"
        android:layout_alignRight="@+id/sB1"
        android:layout_below="@+id/sB1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seekBatText2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="最高承受损失:"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView36"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sB2"
        android:layout_alignStart="@+id/sB2"
        android:layout_below="@+id/sB2"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="12dp"
        android:text="预期收益率："
        android:textColor="@color/WordBlack"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/sB3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seekBatText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="最低收益率:"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView36"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sB4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sB3"
        android:layout_alignRight="@+id/sB3"
        android:layout_below="@+id/sB3"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seekBatText3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="最高收益率:"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@color/WordBlack"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView36"
            android:layout_weight="1" />

    </LinearLayout>

