<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="61dp" android:padding="8dp" android:minHeight="61dp">

	<TextView
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:text="基"
			android:id="@+id/txtSimpleType" android:background="@drawable/fund_background" android:gravity="center"
			android:textColor="#ffffff" android:textSize="24sp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="某某某基金"
			android:id="@+id/txtGoodName" android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/txtSimpleType" android:layout_toEndOf="@+id/txtSimpleType"
			android:paddingLeft="8dp" android:textSize="18dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="主分类-二级分类"
			android:id="@+id/lblCategories" android:layout_alignBottom="@+id/txtSimpleType"
			android:layout_toRightOf="@+id/txtSimpleType" android:layout_toEndOf="@+id/txtSimpleType"
			android:paddingLeft="8dp" android:textColor="@color/darkGrey" android:textSize="16dp"/>
	<EditText
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/txtAmount"
			android:singleLine="false"
			android:textSize="20sp" android:text="10000" android:textColor="@color/WordBlack" android:gravity="center"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥"
	          android:id="@+id/textView21"
	          android:textSize="20dp"
	          android:textColor="@color/increasingRed" android:layout_centerVertical="true"
	          android:layout_toLeftOf="@+id/txtAmount" android:layout_toStartOf="@+id/txtAmount"/>
</RelativeLayout>