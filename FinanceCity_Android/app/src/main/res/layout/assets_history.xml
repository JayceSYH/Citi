<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assert_his"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/history"
        android:text="事件"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_marginLeft="95dp"/>

    <TextView
        android:id="@+id/line"
        android:background="@color/validBlue"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginLeft="86dp"
        android:layout_alignBottom="@id/history"
        android:layout_alignTop="@id/history"/>

    <ImageView
        android:id="@+id/node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/node"
        android:layout_alignLeft="@id/line"
        android:layout_alignRight="@id/line"
        android:layout_marginLeft="-6dp"
        android:layout_marginRight="-6dp" />

    <TextView
        android:id="@+id/time"
        android:text="时间"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:gravity="right"
        android:layout_toLeftOf="@id/node"
        android:layout_marginRight="5dp"/>



</RelativeLayout>
