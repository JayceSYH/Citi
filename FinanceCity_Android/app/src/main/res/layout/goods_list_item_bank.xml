<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="61dp" android:padding="8dp" android:minHeight="61dp">

	<TextView
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:text="理"
			android:id="@+id/txtSimpleType" android:background="@drawable/bank_background" android:gravity="center"
			android:textColor="#ffffff" android:textSize="24sp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="某某某理财产品"
			android:id="@+id/txtGoodName" android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/txtSimpleType" android:layout_toEndOf="@+id/txtSimpleType"
			android:paddingLeft="8dp" android:textSize="18dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="主分类-二级分类"
			android:id="@+id/txtCategories" android:layout_alignBottom="@+id/txtSimpleType"
			android:layout_toRightOf="@+id/txtSimpleType" android:layout_toEndOf="@+id/txtSimpleType"
			android:paddingLeft="8dp" android:textColor="@color/darkGrey" android:textSize="16dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="￥500"
			android:id="@+id/txtPrice" android:layout_centerVertical="true" android:layout_toRightOf="@+id/txtGoodName"
			android:layout_toEndOf="@+id/txtGoodName" android:layout_marginLeft="30dp"
			android:layout_marginStart="30dp" android:textSize="20dp" android:textColor="@color/increasingRed"/>
	<EditText
			android:layout_width="30dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/txtAmount"
			android:layout_toLeftOf="@+id/btAdd"
			android:layout_toStartOf="@+id/btAdd" android:layout_centerVertical="true" android:singleLine="false"
			android:textSize="20sp" android:text="1" android:textColor="@color/WordBlack" android:gravity="center"/>
	<TextView
			android:layout_width="23dp"
			android:layout_height="23dp"
			android:text="-"
			android:id="@+id/btMinus"
			android:textSize="20dp" android:gravity="center"
			android:layout_toLeftOf="@+id/txtAmount"
			android:layout_toStartOf="@+id/txtAmount" android:layout_centerVertical="true" android:autoText="false"
			android:background="@color/lightGrey" android:textColor="@color/WordBlack"/>
	<TextView android:layout_width="23dp" android:layout_height="23dp" android:text="+" android:id="@+id/btAdd"
	          android:textSize="20dp" android:gravity="center"
	          android:layout_alignParentRight="true"
	          android:layout_alignParentEnd="true" android:layout_centerVertical="true"
	          android:background="@color/lightGrey" android:textColor="@color/WordBlack"/>
</RelativeLayout>