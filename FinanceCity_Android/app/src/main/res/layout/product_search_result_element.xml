<?xml version="1.0" encoding="utf-8"?>
<!--单个产品搜索结果单元-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_result_element_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:clickable="true" android:paddingTop="5dp" android:paddingBottom="5dp">

    <!--产品名称-->
	<RelativeLayout
			android:id="@+id/background"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true" android:background="@drawable/bank_background"
			android:paddingBottom="6dp" android:paddingTop="5dp">
		<TextView
				android:id="@+id/type"
				android:text="理"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textSize="15sp"
				android:gravity="center"
				android:textColor="#ffffff"
				android:layout_below="@+id/line" android:layout_centerHorizontal="true" android:layout_marginTop="1dp"/>
		<TextView
				android:id="@+id/year_rate"
				android:text="2.19%"
				android:textSize="16sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_alignParentTop="true" android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true" android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true" android:layout_marginTop="10dp"
				android:textColor="@color/white" android:textStyle="bold"/>
		<TextView
				android:id="@+id/line"
				android:layout_width="40dp"
				android:layout_height="1dp"
				android:gravity="center" android:background="#ffffff"
				android:layout_below="@+id/year_rate" android:layout_centerHorizontal="true"
				android:layout_marginTop="3dp"/>
	</RelativeLayout>

	<!--产品简介-->
	<TextView
			android:id="@+id/product"
			android:text="产品名称"
			android:textSize="18sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/background"
			android:gravity="left"
			android:layout_gravity="right"
			android:layout_marginLeft="5dp" android:textColor="@color/WordBlack"/>
	<TextView
		android:id="@+id/top"
		android:textSize="12dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/background"
		android:gravity="left"
		android:layout_gravity="right"
		android:layout_marginLeft="5dp"
		android:layout_below="@id/product"/>
	<TextView
		android:id="@+id/middle"
		android:textSize="12dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/background"
		android:gravity="left"
		android:layout_gravity="right"
		android:layout_marginLeft="5dp"
		android:layout_below="@id/top" />
	<TextView
		android:id="@+id/bottom"
		android:textSize="12dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/background"
		android:gravity="left"
		android:layout_gravity="right"
		android:layout_marginLeft="5dp"
		android:layout_below="@id/middle" />
    <TextView
		android:id="@+id/introduction"
		android:text="介绍。。。。。。。。。。。。。。"
		android:textColor="@color/propertyValue"
        android:layout_height="wrap_content"
		android:layout_width="fill_parent"
        android:textSize="15dp"
		android:layout_toRightOf="@id/background"
        android:gravity="left"
        android:layout_alignParentBottom="true"
		android:layout_below="@id/product"
        android:layout_marginLeft="5dp"/>
</RelativeLayout>
