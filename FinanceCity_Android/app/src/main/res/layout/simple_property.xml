<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:minHeight="30dp">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="key"
			android:id="@+id/txtPropertyName" android:layout_weight="1" android:gravity="center_vertical|start"
			android:textColor="@color/propertyName" android:padding="3dp"/>
	<TextView android:layout_width="wrap_content" android:layout_height="match_parent"
	          android:text="value"
	          android:id="@+id/txtValue" android:layout_weight="1" android:gravity="center_vertical|end"
	          android:textColor="@color/propertyValue" android:padding="3dp"/>
</LinearLayout>