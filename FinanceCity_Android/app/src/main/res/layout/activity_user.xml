        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#BFBFBF">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp" android:background="#ffffff" android:padding="12dp">
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/modify_mes" android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                        android:src="@drawable/edit"/>
                <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:id="@+id/userface"
                        android:src="@mipmap/my_line" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:id="@+id/id_name" android:layout_alignTop="@+id/userface"
                        android:layout_toRightOf="@+id/userface" android:layout_toEndOf="@+id/userface"
                        android:textSize="20sp" android:layout_marginLeft="12dp"/>
                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/btPrefer"
                           android:src="@drawable/preference" android:layout_alignBottom="@+id/modify_mes"
                           android:layout_toLeftOf="@+id/modify_mes" android:layout_toStartOf="@+id/modify_mes"
                           android:layout_marginRight="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"

                    android:background="#ffffff"
                    android:padding="5dp">

                <TextView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="手机:"
                        android:textColor="@color/propertyValue"
                        android:textSize="12sp" android:id="@+id/textView40"
                        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView"
                        android:layout_toEndOf="@+id/imageView" android:layout_marginLeft="12dp"/>

                <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13388889999"
                        android:textColor="@color/propertyName"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView40"
                        android:layout_alignStart="@+id/textView40"/>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView"
                        android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="false" android:src="@drawable/mobile_icon"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"

                    android:background="#ffffff" android:layout_marginTop="1px"
                    android:padding="5dp">

                <TextView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="生日:"
                        android:textColor="@color/propertyValue"
                        android:textSize="12sp" android:id="@+id/textView41"
                        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2" android:layout_marginLeft="12dp"/>

                <TextView
                        android:id="@+id/birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="1996.6.9"
                        android:textColor="@color/propertyName"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView41"
                        android:layout_alignStart="@+id/textView41"/>
                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/imageView2"
                           android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true" android:src="@drawable/birthday_icon"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"

                    android:background="#ffffff" android:layout_marginTop="1px"
                    android:padding="5dp">

                <TextView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="城市/农村:"
                        android:textColor="@color/propertyValue"
                        android:textSize="12sp"
                        android:id="@+id/textView42"
                        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView3"
                        android:layout_toEndOf="@+id/imageView3" android:layout_marginLeft="12dp"/>

                <TextView
                        android:id="@+id/city_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="城市"
                        android:textColor="@color/propertyName"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView42"
                        android:layout_alignStart="@+id/textView42"/>
                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/imageView3"
                           android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true" android:src="@drawable/urban_icon"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"

                    android:background="#ffffff" android:layout_marginTop="1px"
                    android:padding="5dp">

                <TextView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="每月收入:"
                        android:textColor="@color/propertyValue"
                        android:textSize="12sp" android:id="@+id/textView43"
                        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView4"
                        android:layout_toEndOf="@+id/imageView4" android:layout_marginLeft="12dp"/>

                <TextView
                        android:id="@+id/get_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textColor="@color/propertyName"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView43"
                        android:layout_alignStart="@+id/textView43"/>
                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/imageView4"
                           android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true" android:src="@drawable/income_icon"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"

                    android:background="#ffffff" android:layout_marginTop="1px"
                    android:padding="5dp">

                <TextView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="每月支出:"
                        android:textColor="@color/propertyValue"
                        android:textSize="12sp"
                        android:id="@+id/textView44"
                        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/imageView5"
                        android:layout_toEndOf="@+id/imageView5" android:layout_marginLeft="12dp"/>

                <TextView
                        android:id="@+id/get_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="@color/propertyName"
                        android:textSize="18sp"
                        android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView44"
                        android:layout_alignStart="@+id/textView44"/>
                <ImageView android:layout_width="30dp" android:layout_height="30dp" android:id="@+id/imageView5"
                           android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                           android:layout_alignParentStart="true" android:src="@drawable/outcome_icon"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>