<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/asstes_top_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ffffff">

    <TextView
            android:id="@+id/asset_history_head"
            android:text="资产配置"
            android:textSize="18sp"
            android:textColor="@color/WordBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center" android:padding="8dp"/>
    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/pie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView android:id="@+id/textView39" android:text="资产概览" android:textSize="18sp"
              android:textColor="@color/WordBlack" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:gravity="center"
              android:padding="8dp"/>
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="-5dp"/>
</LinearLayout>
